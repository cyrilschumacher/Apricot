<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:converters="using:Apricot.Converters"
    x:Class="Apricot.View.MainPage"
    DataContext="{Binding Main, Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>
    
    <Page.Background>
        <ImageBrush ImageSource="ms-appx:///Assets/SplashScreen.png"/>
    </Page.Background>

    <interactivity:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{Binding OnLoadedCommand}" />
        </core:EventTriggerBehavior>
    </interactivity:Interaction.Behaviors>

    <StackPanel VerticalAlignment="Center" Visibility="{Binding RetryIsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
        <TextBlock x:Uid="MainView_NoCommunicationEstablished" TextAlignment="Center" Style="{StaticResource BodyTextBlockStyle}" Text="Test"/>
        <Button x:Uid="MainView_TryAgain" HorizontalAlignment="Center" Content="Try Again" Command="{Binding RetryCommand}"/>
    </StackPanel>
</Page>